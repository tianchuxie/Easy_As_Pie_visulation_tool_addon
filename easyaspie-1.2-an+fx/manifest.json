{
	"manifest_version": 2,
	"name": "EasyAsPie",
	"version": "1.2",
	
	"icons": {
		"48": "icons/pie.png"
	},
	
	"permissions": [
		"activeTab",
		"http://*/",
		"storage"
	],
	
	"browser_action":{
		"default_icon": "icons/pie.png",
		"default_title": "EasyAsPie",
		"default_popup": "popup/index.html"
	},
	
	"options_ui": {
		"page": "options.html"
	}
	
}